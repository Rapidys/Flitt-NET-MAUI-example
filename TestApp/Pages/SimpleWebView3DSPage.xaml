<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="TestApp.Pages.SimpleWebView3DSPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Bank Authentication"
             NavigationPage.HasBackButton="False">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="#4285F4" 
               Padding="15" 
               Margin="0" 
               CornerRadius="0">
            <StackLayout Orientation="Horizontal">
                <Label Text="ðŸ”’" FontSize="18" VerticalOptions="Center" TextColor="White" />
                <Label Text="Secure Payment Authentication" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       VerticalOptions="Center" 
                       TextColor="White" 
                       HorizontalOptions="FillAndExpand" />
                <Button Text="Cancel" 
                        FontSize="12" 
                        BackgroundColor="Transparent" 
                        TextColor="White" 
                        BorderColor="White"
                        BorderWidth="1"
                        CornerRadius="15"
                        Padding="10,5"
                        Clicked="OnCancelClicked" />
            </StackLayout>
        </Frame>
        
        <!-- Simple MAUI WebView -->
        <WebView x:Name="PaymentWebView" 
                 Grid.Row="1" 
                 BackgroundColor="White"
                 Navigating="OnWebViewNavigating"
                 Navigated="OnWebViewNavigated" />
                 
    </Grid>
</ContentPage>